{
    "compilerOptions": {
      "target": "es2015",
      "lib": ["es2015"],
      "types": ["reflect-metadata", "node"],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators":true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "rootDir": "./src/*", 
    },
    "exclude": [
      "node_modules"
    ],
    "include": ["src/**/*"]
   }